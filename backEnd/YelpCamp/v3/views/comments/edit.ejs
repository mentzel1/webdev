<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align:center; padding: 25px;">Edit Comment by <%=comment.author.username%></h1>
    <div style="width: 30%; margin: auto;" >
      <form action="/campgrounds/<%=campID%>/comment/<%=comment._id%>?_method=PUT" method="post">
        <div class = "form-group">
          <textarea class="form-control" type="text" name = "comment[text]" rows="10"><%=comment.text%></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer %>
