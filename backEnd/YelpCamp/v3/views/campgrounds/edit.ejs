<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align:center; padding: 25px;">Edit <%= campground.name %></h1>
    <div style="width: 30%; margin: auto;" >
      <form action="/campgrounds/<%=campground._id %>?_method=PUT" method="post">
        <div class = "form-group">
           <label>Name:</label>
          <input class="form-control" type="text" name="name" value="<%=campground.name%>"/>
        </div>
        <div class = "form-group">
          <label>URL:</label>
          <input class="form-control" type="text" name = "img" value="<%=campground.img%>" />
        </div>
        <div class = "form-group">
          <label>Description:</label>
          <textarea class="form-control" name="description" rows="10"><%= campground.description %></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer %>
