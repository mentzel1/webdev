<% include ../partials/header %>

<div class="ui raised very padded text container segment">
  <div class = "ui huge header">Edit <%=blog.title%></div>
  <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input name="blog[title]" value="<%=blog.title%>" type="text" axlength="20" required>
    </div>
    <div class="field">
      <label>Image</label>
      <input name="blog[image]" value="<%=blog.image%>" type="url" required>
    </div>
    <div class="field">
      <label>Blog Post</label>
      <textarea name="blog[body]" required> <%=blog.body%></textarea>
    </div>
    <button class="ui blue basic button" type="submit">Submit</button>
  </form>
</div>

<% include ../partials/footer %>
