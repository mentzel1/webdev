<% include partials/header %>

<div class="ui raised very padded text container segment" id="main_blog_container">
  <!-- ALERTS HERE -->
  <% if(typeof error != "undefined" && error.length > 0){%>
    <div class="ui red message"><%= error %></div>
  <% } %>
  <% if(typeof success != "undefined" && success.length > 0){%>
    <div class="ui green message"><%= success %></div>
  <% } %>
  <h1>Jack Jack's Blog!</h1>
  <hr />
  <!-- Populate blogs -->
  <% blogs.forEach(function(blog){%>
  <div class="ui items">
    <div class="item">
      <div class="ui small image">
        <img class="ui small rounded left floated image" src="<%=blog.image%>"/>
      </div>
    <div class="content">
      <div class="header"><%= blog.title%></div>
      <div class="meta">
        <span class="stay"><%=blog.date.toDateString()%></span>
      </div>
      <div class="description">
        <p><%-blog.body.replace(/\r\n/g, "<br>").substring(0, 300)%></p>
        <div id = "main_button">
          <a class="ui secondary button" href="/blogs/<%=blog._id%>">Read More</a>
        </div>
      </div>
    </div>
  </div>
  <%});%>
</div>

<% include partials/footer %>
