<% include partials/header %>

<div class="ui raised very padded text container segment">
  <h1>JackJack's Blog Page!</h1>
  <hr />
  <!-- Populate blogs -->
  <% blogs.forEach(function(blog){%>
  <div class="ui items">
    <div class="item">
      <div class="ui small image">
        <img class="ui small rounded left floated image imgIndex" src="<%=blog.image%>"/>
      </div>
    <div class="content">
      <div class="header"><%= blog.title%></div>
      <div class="meta">
        <span class="stay"><%=blog.date.toDateString()%></span>
      </div>
      <div class="description">
        <p><%-blog.body.replace(/\r\n/g, "<br>").substring(0, 300)%></p>
      </div>
    </div>
  </div>
      <a class="ui secondary button" href="/blogs/<%=blog._id%>">Read More</a>
  <%});%>
</div>

<% include partials/footer %>
